{
  "manifest_version": 3,
  "name": "F1 Session Countdown",
  "version": "1.0",
  "description": "Displays F1 session countdown as a pop-up.",
  "action": {
    "default_popup": "f1.html",
    "default_title": "F1 Countdown"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["ical.min.js", "f1.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
